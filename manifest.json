{
	"manifest_version": 2,
	"name": "基金定投助手",
	"version": "1.3.5",
	"description": "一款简单的基金定投助手",

	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},

	"background":
	{
		"page": "background.html",
		"persistent": true
	},
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_title": "基金定投助手",
		"default_popup": "popup.html"
	},
	"permissions":
	[
		"*://*.1234567.com.cn/*",
		"http://fundgz.1234567.com.cn/*",
		"alarms",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage"
	],
	"homepage_url": "https://www.pescms.com"
}